{
  "openapi": "3.0.3",
  "info": {
    "title": "SmartVerses API",
    "version": "1.0.0",
    "description": "HTTP API for external control of SmartVerses. Enable it in Settings → Network → HTTP API."
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/api/v1/scripture/go-live": {
      "post": {
        "summary": "Go live with a scripture reference",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reference": {
                    "type": "string",
                    "example": "John 3:16"
                  },
                  "translation": {
                    "type": "string",
                    "example": "NIV",
                    "description": "Optional translation id or alias (e.g., NIV, ESV)."
                  }
                },
                "required": ["reference"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Command accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "reference": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid request" },
          "403": { "description": "API disabled" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/v1/timer/start": {
      "post": {
        "summary": "Start a countdown timer",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "seconds": { "type": "number", "example": 300 },
                  "minutes": { "type": "number", "example": 5 }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Command accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "seconds": { "type": "number" }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid request" },
          "403": { "description": "API disabled" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/v1/timer/stop": {
      "post": {
        "summary": "Stop the active timer",
        "responses": {
          "200": {
            "description": "Command accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" }
                  }
                }
              }
            }
          },
          "403": { "description": "API disabled" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/v1/recording/video/start": {
      "post": {
        "summary": "Start video recording",
        "responses": {
          "200": {
            "description": "Command accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" }
                  }
                }
              }
            }
          },
          "403": { "description": "API disabled" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/v1/recording/video/stop": {
      "post": {
        "summary": "Stop video recording",
        "responses": {
          "200": {
            "description": "Command accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" }
                  }
                }
              }
            }
          },
          "403": { "description": "API disabled" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/v1/recording/audio/start": {
      "post": {
        "summary": "Start audio recording",
        "responses": {
          "200": {
            "description": "Command accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" }
                  }
                }
              }
            }
          },
          "403": { "description": "API disabled" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/v1/recording/audio/stop": {
      "post": {
        "summary": "Stop audio recording",
        "responses": {
          "200": {
            "description": "Command accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" }
                  }
                }
              }
            }
          },
          "403": { "description": "API disabled" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/schedule": {
      "get": {
        "summary": "Get current schedule and active session",
        "responses": {
          "200": {
            "description": "Schedule payload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "schedule": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "number" },
                          "session": { "type": "string" },
                          "start_time": { "type": "string" },
                          "end_time": { "type": "string" },
                          "duration": { "type": "string" },
                          "minister": { "type": "string" }
                        }
                      }
                    },
                    "currentSessionIndex": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/live-slides": {
      "get": {
        "summary": "Get live slide sessions",
        "description": "Returns all Live Slides sessions on this instance. Used for real-time slide sync.",
        "responses": {
          "200": {
            "description": "Live slide sessions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sessions": { "type": "array", "items": { "type": "object" } },
                    "server_running": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/playlists": {
      "get": {
        "summary": "Get all playlists and slides",
        "description": "Returns all playlists with their items and slides. Used by other instances for Import from Network. Requires API to be enabled (Settings → Network → HTTP API).",
        "responses": {
          "200": {
            "description": "All playlists with items and slides",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "playlists": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "name": { "type": "string" },
                          "items": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": { "type": "string" },
                                "title": { "type": "string" },
                                "templateName": { "type": "string" },
                                "slides": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "properties": {
                                      "id": { "type": "string" },
                                      "text": { "type": "string" },
                                      "layout": { "type": "string" },
                                      "order": { "type": "number" }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "required": ["playlists"]
                }
              }
            }
          },
          "403": {
            "description": "API disabled. Enable HTTP API in Settings → Network."
          }
        }
      }
    }
  }
}
