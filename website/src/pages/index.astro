---
import Layout from '../layouts/Layout.astro';
import Header from '../components/sections/Header.astro';
import Hero from '../components/sections/Hero.astro';
import Features from '../components/sections/Features.astro';
import HowItWorks from '../components/sections/HowItWorks.astro';
import Download from '../components/sections/Download.astro';
import Footer from '../components/sections/Footer.astro';
---

<Layout title="ProAssist - AI-Powered Automation for ProPresenter">
  <!-- Software Application Schema -->
  <script is:inline type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "ProAssist",
      "operatingSystem": "Windows, macOS, Linux",
      "applicationCategory": "MultimediaApplication, UtilitiesApplication",
      "description": "AI-powered automation tool for ProPresenter, featuring live transcription, Bible verse detection, and real-time collaboration for worship teams.",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "author": {
        "@type": "Person",
        "name": "Emmanuel Crown",
        "url": "https://github.com/crownemmanuel"
      },
      "softwareVersion": "0.7.0",
      "featureList": [
        "AI Slide Generation",
        "Live Transcription",
        "Smart Bible Verse Detection",
        "Schedule Automation",
        "Multi-Device Sync",
        "ProPresenter Remote Control"
      ],
      "url": "https://proassist.app",
      "downloadUrl": "https://github.com/crownemmanuel/proassist/releases",
      "screenshot": "https://proassist.app/ProAssist.png"
    }
  </script>

  <!-- Organization Schema -->
  <script is:inline type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "ProAssist",
      "url": "https://proassist.app",
      "logo": "https://proassist.app/ProAssist.png",
      "sameAs": [
        "https://github.com/crownemmanuel/proassist"
      ],
      "founder": {
        "@type": "Person",
        "name": "Emmanuel Crown"
      }
    }
  </script>

  <!-- FAQ Schema for AEO -->
  <script is:inline type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is ProAssist?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "ProAssist is an AI-powered automation tool for ProPresenter that provides live transcription, automatic Bible verse detection, intelligent slide generation, and real-time collaboration features for worship teams."
          }
        },
        {
          "@type": "Question",
          "name": "Is ProAssist free to use?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, ProAssist is completely free and open source. You can download it from GitHub and use it without any cost or subscription."
          }
        },
        {
          "@type": "Question",
          "name": "What platforms does ProAssist support?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "ProAssist is available for Windows, macOS, and Linux. You can download the appropriate version for your operating system from the releases page."
          }
        },
        {
          "@type": "Question",
          "name": "How does the Smart Bible Verse Detection work?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "ProAssist uses AI-powered speech recognition to listen to live audio and automatically detects when Bible verses are quoted or referenced. It can identify both direct quotes and paraphrased references, then instantly display the verse in ProPresenter."
          }
        },
        {
          "@type": "Question",
          "name": "Does ProAssist work with ProPresenter 7?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, ProAssist is designed to work seamlessly with ProPresenter 7, connecting via the ProPresenter API to control presentations, trigger slides, and sync content in real-time."
          }
        }
      ]
    }
  </script>

  <!-- HowTo Schema -->
  <script is:inline type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "HowTo",
      "name": "How to Set Up ProAssist with ProPresenter",
      "description": "Learn how to install and configure ProAssist to automate your ProPresenter workflow with AI-powered features.",
      "step": [
        {
          "@type": "HowToStep",
          "position": 1,
          "name": "Download ProAssist",
          "text": "Download ProAssist for your operating system (Windows, macOS, or Linux) from the official releases page on GitHub."
        },
        {
          "@type": "HowToStep",
          "position": 2,
          "name": "Connect to ProPresenter",
          "text": "Launch ProAssist and connect it to your ProPresenter instance using the built-in connection wizard. ProAssist uses the ProPresenter API for seamless integration."
        },
        {
          "@type": "HowToStep",
          "position": 3,
          "name": "Configure Audio Input",
          "text": "Select your audio input source for live transcription. ProAssist can capture audio from your microphone or system audio for real-time speech recognition."
        },
        {
          "@type": "HowToStep",
          "position": 4,
          "name": "Start Automating",
          "text": "Enable the features you want to use such as Smart Verse Detection, AI Slide Generation, or Schedule Automation. ProAssist will now work alongside ProPresenter to enhance your worship presentations."
        }
      ]
    }
  </script>
  <div class="min-h-screen bg-background relative overflow-hidden">
    <!-- Ambient background orbs (dark mode only) -->
    <div class="ambient-bg pointer-events-none absolute inset-0 hidden dark:block" aria-hidden="true">
      <!-- Top-left: violet glow -->
      <div class="orb orb-1 absolute -top-40 -left-40 w-[600px] h-[600px] rounded-full bg-violet-500/[0.14] blur-[120px]"></div>
      <!-- Top-right: blue glow -->
      <div class="orb orb-2 absolute -top-20 right-0 w-[500px] h-[500px] rounded-full bg-blue-500/[0.12] blur-[100px]"></div>
      <!-- Mid-left: emerald glow (near Features) -->
      <div class="orb orb-3 absolute top-[30%] -left-32 w-[450px] h-[450px] rounded-full bg-emerald-500/[0.10] blur-[110px]"></div>
      <!-- Mid-right: fuchsia glow -->
      <div class="orb orb-4 absolute top-[45%] -right-20 w-[400px] h-[400px] rounded-full bg-fuchsia-500/[0.12] blur-[100px]"></div>
      <!-- Lower: amber glow (near HowItWorks) -->
      <div class="orb orb-5 absolute top-[65%] left-[10%] w-[500px] h-[500px] rounded-full bg-amber-500/[0.09] blur-[120px]"></div>
      <!-- Bottom: blue glow (near Download/Footer) -->
      <div class="orb orb-6 absolute top-[85%] right-[5%] w-[550px] h-[550px] rounded-full bg-blue-500/[0.11] blur-[130px]"></div>
    </div>

    <div class="relative z-10">
      <Header />
      <Hero />
      <Features />
      <HowItWorks />
      <Download />
      <Footer />
    </div>
  </div>
</Layout>

<style>
  :target {
    scroll-margin-top: 5rem;
  }

  /* Ambient orb drift animations â€” slow, organic movement */
  .orb {
    will-change: transform;
  }
  .orb-1 {
    animation: drift-1 18s ease-in-out infinite alternate;
  }
  .orb-2 {
    animation: drift-2 22s ease-in-out infinite alternate;
  }
  .orb-3 {
    animation: drift-3 20s ease-in-out infinite alternate;
  }
  .orb-4 {
    animation: drift-4 24s ease-in-out infinite alternate;
  }
  .orb-5 {
    animation: drift-5 19s ease-in-out infinite alternate;
  }
  .orb-6 {
    animation: drift-6 21s ease-in-out infinite alternate;
  }

  @keyframes drift-1 {
    0%   { transform: translate(0, 0) scale(1); }
    100% { transform: translate(60px, 40px) scale(1.1); }
  }
  @keyframes drift-2 {
    0%   { transform: translate(0, 0) scale(1); }
    100% { transform: translate(-50px, 50px) scale(0.95); }
  }
  @keyframes drift-3 {
    0%   { transform: translate(0, 0) scale(1); }
    100% { transform: translate(40px, -30px) scale(1.08); }
  }
  @keyframes drift-4 {
    0%   { transform: translate(0, 0) scale(1); }
    100% { transform: translate(-60px, -40px) scale(1.05); }
  }
  @keyframes drift-5 {
    0%   { transform: translate(0, 0) scale(1); }
    100% { transform: translate(50px, 35px) scale(0.92); }
  }
  @keyframes drift-6 {
    0%   { transform: translate(0, 0) scale(1); }
    100% { transform: translate(-45px, -50px) scale(1.12); }
  }
</style>
