---
/**
 * ThemeToggle - Accessible dark/light mode toggle.
 *
 * Desktop: Uses View Transitions API with a clip-path curtain wipe from top.
 * Mobile: Instant toggle (no view transition) for performance.
 *
 * Theme colors are defined in globals.css under `.dark { }`.
 */
---

<button
  id="theme-toggle"
  type="button"
  aria-label="Toggle dark mode"
  class="relative flex items-center justify-center size-9 rounded-xl border border-zinc-200 dark:border-white/10 bg-white dark:bg-white/5 text-zinc-700 dark:text-white shadow-sm hover:bg-zinc-100 dark:hover:bg-white/10 transition-all duration-200 cursor-pointer"
>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    class="sun-icon absolute size-5 transition-all duration-300 rotate-90 scale-0 opacity-0"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <circle cx="12" cy="12" r="5" fill="currentColor" />
    <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
  </svg>

  <!-- Moon icon (shown in light mode) -->
  <svg
    class="moon-icon absolute size-5 transition-all duration-300"
    fill="currentColor"
    stroke="currentColor"
    stroke-width="1"
    viewBox="0 0 24 24"
  >
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
  </svg>
</button>

<script>
  function initThemeToggle() {
    const btn = document.getElementById('theme-toggle');
    if (!btn) return;

    const sunIcon = btn.querySelector('.sun-icon') as HTMLElement;
    const moonIcon = btn.querySelector('.moon-icon') as HTMLElement;

    function updateIcons(isDark: boolean) {
      if (isDark) {
        sunIcon?.classList.remove('rotate-90', 'scale-0', 'opacity-0');
        sunIcon?.classList.add('rotate-0', 'scale-100', 'opacity-100');
        moonIcon?.classList.add('-rotate-90', 'scale-0', 'opacity-0');
        moonIcon?.classList.remove('rotate-0', 'scale-100', 'opacity-100');
      } else {
        moonIcon?.classList.remove('-rotate-90', 'scale-0', 'opacity-0');
        moonIcon?.classList.add('rotate-0', 'scale-100', 'opacity-100');
        sunIcon?.classList.add('rotate-90', 'scale-0', 'opacity-0');
        sunIcon?.classList.remove('rotate-0', 'scale-100', 'opacity-100');
      }
    }

    // Set initial icon state
    updateIcons(document.documentElement.classList.contains('dark'));

    /** Apply the theme change (class + localStorage) */
    function applyThemeToggle() {
      const isDark = document.documentElement.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
      updateIcons(isDark);
    }

    /**
     * Desktop-only: View Transitions API with clip-path curtain wipe.
     * The old snapshot stays visible while the new theme is revealed
     * from top to bottom via an animated clip-path (polygon).
     *
     * Mobile (<1024px): skip the transition, just toggle instantly.
     */
    function isDesktop() {
      return window.innerWidth >= 1024;
    }

    btn.addEventListener('click', () => {
      // Mobile or no View Transitions support â€” instant toggle
      if (!isDesktop() || !document.startViewTransition) {
        applyThemeToggle();
        return;
      }

      // Desktop: use View Transitions API with curtain wipe
      const transition = document.startViewTransition(() => {
        applyThemeToggle();
      });

      // The CSS animation handles the rest (see <style> below)
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initThemeToggle);
  } else {
    initThemeToggle();
  }
</script>

<style is:global>
  /*
   * View Transition: Curtain wipe from top
   * ----------------------------------------
   * ::view-transition-old = snapshot of the previous theme
   * ::view-transition-new = the incoming theme
   *
   * We animate the NEW view's clip-path from a thin strip at the top
   * to the full viewport, creating a "curtain drop" effect.
   * The OLD view stays fully visible underneath until covered.
   *
   * Only active on desktop (>=1024px). Mobile has no transition.
   */

  @media (min-width: 1024px) {
    ::view-transition-old(root) {
      animation: none;
      z-index: 1;
    }

    ::view-transition-new(root) {
      animation: curtain-wipe 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
      z-index: 2;
    }

    @keyframes curtain-wipe {
      from {
        clip-path: polygon(0 0, 100% 0, 100% 0, 0 0);
      }
      to {
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
      }
    }
  }
</style>
