---
import { Icon } from 'astro-icon/components';

const features = [
  {
    icon: 'ph:robot-bold',
    title: 'AI-Powered Processing',
    description: 'Leverage OpenAI GPT-4, Google Gemini, and Groq to intelligently split and format your content into perfectly sized slides. Support for multiple AI providers and models.'
  },
  {
    icon: 'ph:note-pencil-bold',
    title: 'Flexible Templates',
    description: 'Four processing types: Simple, Regex, JavaScript, and AI-Powered. Create custom templates with color coding, icons, and layout options for any content type.'
  },
  {
    icon: 'ph:lightning-bold',
    title: 'Real-Time Sync',
    description: 'Instantly update ProPresenter slides with "Go Live" functionality. Changes appear immediately on screen with automatic file writing and ProPresenter activation.'
  },
  {
    icon: 'ph:globe-bold',
    title: 'Live Slides Collaboration',
    description: 'WebSocket-based real-time editing system. Share typing URLs with team members to edit slides from any browser on your network. Perfect for remote presenters.'
  },
  {
    icon: 'ph:timer-bold',
    title: 'Stage Assist Timer',
    description: 'Powerful timer and schedule management with countdown timers, schedule automation, ProPresenter integration, and remote access. Auto-adjust sessions dynamically.'
  },
  {
    icon: 'ph:book-open-bold',
    title: 'SmartVerses Bible Tools',
    description: 'AI-powered Bible search with direct reference parsing, live transcription with automatic verse detection, paraphrase detection, and instant "Go Live" to ProPresenter.'
  },
  {
    icon: 'ph:microphone-stage-bold',
    title: 'Live Testimonies',
    description: 'Manage testimonies from Firebase with real-time updates. Set testimonies live with keyboard navigation, automatic formatting, and ProPresenter integration.'
  },
  {
    icon: 'ph:link-bold',
    title: 'Network Sync',
    description: 'Synchronize playlists and schedules across multiple ProAssist instances. Master/Slave/Peer modes for seamless multi-device workflows.'
  },
  {
    icon: 'ph:chat-circle-dots-bold',
    title: 'Global AI Assistant',
    description: 'Context-aware AI chat assistant available throughout the app. Create slides, manage playlists, set timers, update schedules, and proofread content with natural language.'
  },
  {
    icon: 'ph:sparkle-bold',
    title: 'AI Automation',
    description: 'Automated slide proofreading, timer session assignment, and AI prompt generation. Smart corrections highlighted automatically for quick review.'
  },
  {
    icon: 'ph:crosshair-bold',
    title: 'Advanced ProPresenter Control',
    description: 'Multi-instance ProPresenter connections, per-slide activation, stage layout changes, timer synchronization, and custom click configurations for complete control.'
  },
  {
    icon: 'ph:download-simple-bold',
    title: 'Multiple Import Options',
    description: 'Import from text files, Live Slides sessions, network masters, or generate content with AI. Flexible import workflows for any scenario.'
  },
  {
    icon: 'ph:image-bold',
    title: 'AI Schedule Extraction',
    description: 'Upload an image of your schedule and let AI extract all sessions automatically. Perfect for quickly importing schedules from printed materials.'
  },
  {
    icon: 'ph:video-camera-bold',
    title: 'Video & Audio Recorder',
    description: 'Professional video and audio recording with camera and microphone support. Record high-quality video (MP4/WebM) and audio (WAV/MP3) with real-time level monitoring.'
  },
  {
    icon: 'ph:paint-brush-bold',
    title: 'Modern Interface',
    description: 'Beautiful dark and light themes with an intuitive, organized layout. Searchable help system, keyboard shortcuts, and smooth animations throughout.'
  }
];
---

<section id="features" class="bg-zinc-50 py-16 md:py-32">
  <div class="mx-auto max-w-6xl px-6">
    <div class="text-center">
      <h2 class="text-balance text-4xl font-semibold lg:text-5xl">Built to cover your needs</h2>
      <p class="mt-4 text-muted-foreground">Comprehensive automation tools for modern worship and presentation teams</p>
    </div>

    <div class="mx-auto mt-12 grid gap-6 md:mt-16 sm:grid-cols-2 lg:grid-cols-3">
      {features.map((feature) => (
        <div class="group relative overflow-hidden rounded-2xl border border-zinc-200 bg-white p-6 transition-all duration-300 hover:border-zinc-300 hover:shadow-lg hover:-translate-y-1">
          <!-- Icon -->
          <div class="mb-4 inline-flex rounded-xl bg-zinc-100 p-3 transition-colors group-hover:bg-zinc-900 group-hover:text-white">
            <Icon name={feature.icon} class="size-6" />
          </div>

          <h3 class="font-semibold text-zinc-900">{feature.title}</h3>
          <p class="mt-2 text-sm leading-relaxed text-zinc-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
