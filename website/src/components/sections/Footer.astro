---
const currentYear = new Date().getFullYear();

const links = [
  { href: '#features', label: 'Features' },
  { href: '#how-it-works', label: 'How It Works' },
  { href: '#download', label: 'Download' },
  { href: 'https://github.com/crownemmanuel/proassist', label: 'GitHub', external: true },
  { href: 'https://github.com/crownemmanuel/proassist/releases', label: 'Releases', external: true },
];
---

<footer class="relative bg-gradient-to-b from-white via-zinc-50 to-zinc-100">
  <!-- Decorative top border -->
  <div class="h-px bg-gradient-to-r from-transparent via-zinc-300 to-transparent"></div>

  <!-- Main content -->
  <div class="mx-auto max-w-6xl px-6 py-20">
    <!-- Large brand statement -->
    <div class="relative mb-16">
      <h2 id="footer-heading" class="text-center text-4xl font-bold tracking-tight text-zinc-900 sm:text-5xl md:text-6xl">
        <span class="relative">
          Ready to
          <svg class="absolute -bottom-2 left-0 w-full" viewBox="0 0 200 12" fill="none" preserveAspectRatio="none">
            <path
              id="underline-path"
              d="M1 9C30 3 60 1 100 5C140 9 170 7 199 3"
              stroke="url(#footer-gradient)"
              stroke-width="3"
              stroke-linecap="round"
              class="underline-draw"
            />
            <defs>
              <linearGradient id="footer-gradient" x1="0" y1="0" x2="200" y2="0">
                <stop offset="0%" stop-color="#7c3aed"/>
                <stop offset="100%" stop-color="#c026d3"/>
              </linearGradient>
            </defs>
          </svg>
        </span>
        {" "}automate?
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-center text-lg text-zinc-500">
        Join worship teams worldwide using ProAssist to streamline their presentations.
      </p>

      <!-- CTA Button -->
      <div class="mt-8 flex justify-center">
        <a
          href="#download"
          class="group relative inline-flex items-center gap-2 overflow-hidden rounded-full bg-zinc-900 px-8 py-4 text-sm font-semibold text-white shadow-lg shadow-zinc-900/25 transition-all duration-300 hover:shadow-xl hover:shadow-zinc-900/30"
        >
          <span class="relative z-10">Download ProAssist</span>
          <svg class="relative z-10 h-4 w-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
          <div class="absolute inset-0 -z-0 bg-gradient-to-r from-violet-600 to-fuchsia-600 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
        </a>
      </div>
    </div>

    <!-- Flowing links section -->
    <div class="flex flex-wrap items-center justify-center gap-x-2 gap-y-3 text-sm">
      {links.map((link, i) => (
        <>
          <a
            href={link.href}
            target={link.external ? '_blank' : undefined}
            class="group relative px-4 py-2 text-zinc-600 transition-colors duration-200 hover:text-zinc-900"
          >
            <span class="relative z-10">{link.label}</span>
            {link.external && (
              <svg class="ml-1 inline-block h-3 w-3 opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            )}
            <span class="absolute inset-x-2 -bottom-px h-px origin-left scale-x-0 bg-gradient-to-r from-blue-500 to-emerald-500 transition-transform duration-300 group-hover:scale-x-100"></span>
          </a>
          {i < links.length - 1 && (
            <span class="text-zinc-300">·</span>
          )}
        </>
      ))}
    </div>

    <!-- Divider with logo -->
    <div class="relative my-12">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-zinc-200"></div>
      </div>
      <div class="relative flex justify-center">
        <a href="/" class="group bg-zinc-50 px-6">
          <div class="relative flex items-center gap-3">
            <div class="relative">
              <div class="absolute -inset-2 rounded-xl bg-gradient-to-r from-blue-500/20 to-emerald-500/20 opacity-0 blur transition-opacity duration-500 group-hover:opacity-100"></div>
              <img src="/ProAssist.png" alt="ProAssist" class="relative h-10 w-10 rounded-xl shadow-md transition-transform duration-300 group-hover:scale-110" />
            </div>
            <span class="text-xl font-bold tracking-tight text-zinc-900">ProAssist</span>
          </div>
        </a>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="flex flex-col items-center gap-6 text-center">
      <!-- Social/GitHub -->
      <a
        href="https://github.com/crownemmanuel/proassist"
        target="_blank"
        class="inline-flex items-center gap-2 rounded-full border border-zinc-200 bg-white px-5 py-2.5 text-sm font-medium text-zinc-700 shadow-sm transition-all duration-200 hover:border-zinc-300 hover:bg-zinc-50 hover:shadow"
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Star on GitHub
        <span class="rounded-full bg-zinc-100 px-2 py-0.5 text-xs text-zinc-500">Open Source</span>
      </a>

      <!-- Credits -->
      <div class="flex flex-col items-center gap-2 text-sm text-zinc-500">
        <p>
          &copy; {currentYear} ProAssist · MIT License
        </p>
        <p class="flex items-center gap-1.5">
          Designed & built by
          <a
            href="https://github.com/crownemmanuel"
            target="_blank"
            class="font-medium text-zinc-700 underline decoration-zinc-300 underline-offset-2 transition-colors hover:text-zinc-900 hover:decoration-zinc-500"
          >
            Emmanuel Crown
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .underline-draw {
    stroke-dasharray: 250;
    stroke-dashoffset: 250;
    transition: stroke-dashoffset 1s ease-out;
  }

  .underline-draw.animate {
    stroke-dashoffset: 0;
  }
</style>

<script>
  const footerHeading = document.getElementById('footer-heading');
  const underlinePath = document.getElementById('underline-path');

  if (footerHeading && underlinePath) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            underlinePath.classList.add('animate');
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.5 }
    );

    observer.observe(footerHeading);
  }
</script>
