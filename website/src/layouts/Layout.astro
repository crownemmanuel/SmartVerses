---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Transform your ProPresenter workflow with AI-powered automation, intelligent slide generation, and real-time collaboration." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/ProAssist.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/globals.css';
</style>
